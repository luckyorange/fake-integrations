{
  "extends": [ "standard", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser", 
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "import/no-commonjs": "off"
      }
    },
    {
      "files": ["**/*.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}